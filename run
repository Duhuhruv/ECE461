# #!/bin/sh

# # Run npm build, and exit if it fails
# npm run build
# if [ $? -ne 0 ]; then
#   exit 1
# fi

# # Run the node command
# node dist/run.js "$@"
#!/bin/sh

# Check if the first argument is "install"

if [ "$1" = "install" ]; then
    echo "Running npm install..."
    npm run build

    if [ $? -ne 0 ]; then
        echo "npm install failed. Exiting..."
        exit 1
    fi

    exit 0
fi

node dist/run.js "$@"
